<!DOCTYPE html>
<html>
<head>
    <title>PPTT</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kQtW33rZJAHjgefvhyyzcGF3C5TFyBQBA13V1RKPf4uH+bwyzQxZ6CmMZHmNBEfJ"
            crossorigin="anonymous"></script>
    <link href="/styles/style.css" rel="stylesheet">
</head>
<body>
<h5>
    {% if lang == "en" %}
        {% trans %}Runde wählen{% endtrans %}:
    {% else %}
        Runde wählen:
    {% endif %}
</h5>
{% for i in 1..round|length %}
    <a class="btn btn-dark" href="{{ path('show_rounds', {'lang': lang, 'roundId': i}) }}" role="button">{{ i }}</a>
{% endfor %}

<table class="table table-striped">
    <thead class="thead-light">
    {% if lang == "en" %}
        <tr>
            <th scope="col">{% trans %}Modell{% endtrans %}</th>
            <th scope="col">{% trans %}Flug Distanz{% endtrans %}</th>
            <th scope="col">{% trans %}Flug Dauer{% endtrans %}</th>
            <th scope="col">{% trans %}Teilnehmer{% endtrans %}</th>
            <th scope="col">{% trans %}Datum{% endtrans %}</th>
        </tr>
    {% else %}
        <tr>
            <th scope="col">Modell</th>
            <th scope="col">Flug Distanz</th>
            <th scope="col">Flug Dauer</th>
            <th scope="col">Teilnehmer</th>
            <th scope="col">Datum</th>
        </tr>
    {% endif %}
    </thead>
    <tbody>
    {% for i in 1..round|length %}
        <tr>
            <td>{{ round[i].model }}</td>
            <td>{{ round[i].distance }}</td>
            <td>{{ round[i].duration }}</td>
            <td>{{ round[i].partname }}</td>
            <td>{{ round[i].date }}</td>
            <td>
                <a class="btn btn-info" href="{{ path('show_detail', {'lang': lang, 'roundId': roundId, 'id': i}) }}"
                   role="button">info</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div id="buttons" class="d-flex flex-direction-row justify-content-between">
    <a class="btn btn-secondary" href="{{ path('show_overview') }}" role="button">
        {% if lang == "en" %}
            {% trans %}Überblick{% endtrans %}
        {% else %}
            Überblick
        {% endif %}
    </a>

    <div>
        <a class="btn btn-warning" href="{{ path('show_rounds', {'lang': 'en', 'roundId': roundId}) }}"
           role="button">en</a>
        <a class="btn btn-warning" href="{{ path('show_rounds', {'lang': 'de', 'roundId': roundId}) }}"
           role="button">de</a>
    </div>
</div>

<div class="d-flex justify-content-center">
    <img id="paperplane" src="/img/paper-airplane.png">
</div>
</body>
</html>